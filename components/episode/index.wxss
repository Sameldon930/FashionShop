/* components/epsoide/index.wxss */
.container{
  height: 60rpx;
  display: inline-flex;
  flex-direction: row;
}

.plain{
  font-size: 30rpx;
}

.index{
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}

.line{
  height: 44rpx;
  margin-right: 14rpx;
  margin-bottom: 2rpx;
  border-left: 1px solid black;
}

.index-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;/* No和数字是底部对齐 */
}
.date-container{
  display: flex;
  flex-direction: column;
  align-items: baseline;
  font-size: 60rpx;
  line-height: 50rpx;
}
.month{
  font-size: 24rpx;
  line-height: 24rpx;
  margin-right: 2rpx;
}

.year{
  font-size: 24rpx;
}